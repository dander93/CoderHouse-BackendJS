<div id="productsContainer" class="d-flex flex-column col-12 text-white">

    <div class="d-flex col p-2 justify-content-center bg-dark bg-opacity-25 rounded">
        <div class="col-3 border border-white d-flex rounded p-1 align-items-center justify-content-center">
            <p class="col-4 m-0 p-0">Ordenar por precio</p>
            <select id="select-order" class="form-select">
                <option value="asc">ascendente</option>
                <option value="desc">descendente</option>
            </select>
        </div>
        <div class="col-2 border border-white d-flex rounded p-1 mx-2 align-items-center justify-content-center">
            <p class="col-8 m-0 p-0">Cantidad de elementos</p>
            <select id="select-limit" class="form-select">
                <option value="5">5</option>
                <option value="10">10</option>
                <option value="15">15</option>
            </select>
        </div>
    </div>

    <div class="d-flex flex-column">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">title</th>
                    <th scope="col">description</th>
                    <th scope="col">price</th>
                    <th scope="col">stock</th>
                    <th scope="col">code</th>
                    <th scope="col">category</th>
                    <th scope="col">status</th>
                    <th scope="col">actions</th>
                </tr>
            </thead>
            <tbody id="products-table-body">
            </tbody>
        </table>

        <form id="formProductos" action="#" class="col d-flex justify-content-center">
            <button class="btn btn-primary" type="submit">Consultar Productos</button>
            <input id="inputPages" type="hidden" value="1">
        </form>
        <div class="col d-flex justify-content-center p-1 mt-2 bg-dark bg-opacity-25 text-white">
            <div id="prev-page-btn" class="btn border col-1 rounded disabled">Pagina Anterior</div>
            <div id="pages" class="border col-1 mx-1 rounded btn disabled">-</div>
            <div id="next-page-btn" class="btn border col-1 rounded disabled">Pagina siguiente</div>
        </diV>
    </div>
</div>

