<div id="login-container">
    <div class="bg-dark bg-opacity-25 rounded border border-warning text-shadow-dark shadow">
        <form id="form-login" action="/login" method="POST" class="p-4 floating-labels">
            <div class="form-floating">
                <input id="email-input" type="email" name="email" class="form-control" placeholder="usuario@test.com">
                <label for="email-input">Usuario</label>
            </div>
            <div class="form-floating mt-1">
                <input id="password-input" type="password" name="password" class="form-control"
                    placeholder="contraseñaSegura123">
                <label for="password-input">Contraseña</label>
            </div>
            <div class="mt-2">
                <div class="d-flex col p-0">
                    <button type="submit" class="btn btn-warning d-inline-block">Entrar</button>
                    <p class="mt-2 p-0 mb-0 mx-3 text-white">¿aún no tienes una cuenta? <a href="/register"
                            class="link-warning"> registrate </a></p>
                </div>
                <p class="text-white text-end me-3">¿tienes cuenta de GitHub? <a href="/api/oauth/github/login" class="link-warning">conéctate!</a></p>
            </div>
        </form>
    </div>
</div>