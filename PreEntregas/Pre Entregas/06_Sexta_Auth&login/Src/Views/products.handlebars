{{#if user}}
<div class="container-fluid d-flex justify-content-center mb-1 text-shadow-dark bg-warning rounded border border-dark">
    <div class="p-3 text-center w-100">
        <p class="p-0 m-0">Bienvenido, {{user.name}}! | rol: {{user.role}}</p>
    </div>
</div>
{{/if}}

<div id="productsContainer" class="d-flex flex-column col-12 text-white border border-dark rounded">

    <div class="d-flex col p-2 justify-content-center bg-dark bg-opacity-25 rounded-top">
        <div class="col-3 border border-white d-flex rounded p-1 align-items-center justify-content-center mx-2">
            <p class="col-2 m-0 p-0">Estado</p>

            <input id="product-state-all" type="radio" class="btn-check" name="product-state" value=""
                autocomplete="off" checked>
            <label for="product-state-all" class="btn btn-outline-light col-3">Cualquiera</label>

            <input id="product-state-active" type="radio" class="btn-check" name="product-state" value="true"
                autocomplete="off">
            <label for="product-state-active" class="btn btn-outline-light mx-2 col-3">Activo</label>

            <input id="product-state-inactive" type="radio" class="btn-check" name="product-state" value="false"
                autocomplete="off">
            <label for="product-state-inactive" class="btn btn-outline-light me-2 col-3">Inactivo</label>
        </div>

        <div class="col-3 border border-white d-flex rounded p-1 align-items-center justify-content-center mx-2">
            <p class="col-5 m-0 p-0">Seleccionar categoria</p>
            <select id="categorys-select" class="form-select">
                {{#each categorys}}
                    {{#if (eq @index 0)}}
                        <option value="{{this}}" selected>{{this}}</option>
                    {{else}}
                        <option value="{{this}}">{{this}}</option>
                    {{/if}}
                {{/each}}
            </select>
        </div>

        <div class="col-3 border border-white d-flex rounded p-1 align-items-center justify-content-center">
            <p class="col-4 m-0 p-0">Ordenar por precio</p>
            <select id="select-order" class="form-select">
                <option value="asc">ascendente</option>
                <option value="desc">descendente</option>
            </select>
        </div>
        <div class="col-2 border border-white d-flex rounded p-1 ms-2 align-items-center justify-content-center">
            <p class="col-8 m-0 p-0">Cantidad de elementos</p>
            <select id="select-limit" class="form-select">
                <option value="5">5</option>
                <option value="10">10</option>
                <option value="15">15</option>
            </select>
        </div>
    </div>

    <div class="d-flex flex-column">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">id</th>
                    <th scope="col" class="text-center">title</th>
                    <th scope="col" class="text-center">description</th>
                    <th scope="col" class="text-center">price</th>
                    <th scope="col" class="text-center">stock</th>
                    <th scope="col" class="text-center">code</th>
                    <th scope="col" class="text-center">category</th>
                    <th scope="col" class="text-center">status</th>
                    <th scope="col" class="text-center">actions</th>
                </tr>
            </thead>
            <tbody id="products-table-body">
            </tbody>
        </table>

        <form id="formProductos" action="#" class="col d-flex justify-content-center">
            <button class="btn btn-primary" type="submit">Aplicar filtros</button>
            <input id="inputPages" type="hidden" value="1">
        </form>
        <div class="col d-flex justify-content-center p-1 mt-2 bg-dark bg-opacity-25 text-white rounded-bottom">
            <div id="prev-page-btn" class="btn col-1 rounded disabled">Pagina Anterior</div>
            <div id="pages" class="col-1 mx-1 rounded btn disabled">-</div>
            <div id="next-page-btn" class="btn col-1 rounded disabled">Pagina siguiente</div>
        </diV>
    </div>
</div>